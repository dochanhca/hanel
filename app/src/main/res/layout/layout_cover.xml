<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_cover"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/img_cover" />

    <ImageView
        android:id="@+id/img_heart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/normal_margin"
        android:src="@drawable/ic_heart" />

    <TextView
        android:id="@+id/txt_heart_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_toLeftOf="@+id/img_heart"
        android:text="100"
        android:textStyle="bold"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/img_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/txt_heart_count"
        android:layout_margin="@dimen/normal_margin"
        android:layout_marginRight="@dimen/small_margin"
        android:src="@drawable/ic_chat" />

    <TextView
        android:id="@+id/txt_chat_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_toLeftOf="@+id/img_chat"
        android:text="25"
        android:textStyle="bold"
        android:textColor="@color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/primary_dark_90_trans"
        android:paddingLeft="@dimen/normal_margin"
        android:paddingRight="@dimen/normal_margin"
        android:paddingTop="@dimen/small_margin"
        android:paddingBottom="@dimen/small_margin">

        <TextView
            android:id="@+id/txt_cover_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ưu đãi chuỗi coffee bean"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_action_bar"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_cover_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_cover_title"
            android:layout_marginTop="@dimen/small_margin"
            android:textSize="@dimen/text_size_small"
            android:text="@string/cover_des"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txt_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="50%"
            android:textColor="@color/white"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txt_cover_des"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/normal_margin"
            android:text="@string/detail"
            android:textAllCaps="true"
            android:textColor="@color/white" />

    </RelativeLayout>


</RelativeLayout>