<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/normal_margin"
    android:layout_marginBottom="@dimen/normal_margin">

    <com.example.ducpv.haneldemo.customuis.SquareImageView
        android:id="@+id/img_nearby_cover"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginRight="@dimen/normal_margin"
        android:scaleType="fitXY"
        android:src="@drawable/img_promotion_1" />

    <TextView
        android:id="@+id/txt_code_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_nearby_cover"
        android:text="Gift code miễn phí"
        android:textAllCaps="true"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_code_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_code_name"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_toRightOf="@id/img_nearby_cover"
        android:ellipsize="end"
        android:text="Code: 194G-6SH-542M (đã hết hạn)"
        android:textSize="@dimen/text_size_small" />

    <ImageView
        android:id="@+id/img_copy_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_code_detail"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/img_nearby_cover"
        android:layout_marginRight="@dimen/normal_margin"
        android:src="@drawable/img_copy_code"/>

    <ImageView
        android:id="@+id/img_rq_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_code_detail"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/img_copy_code"
        android:src="@drawable/img_qr_code"/>

</RelativeLayout>